<%- include('header') -%>
<div class="box" id="heading">
    <h1><%= title %></h1>
</div>
<div class="box">
    <% tasks.forEach(task => { %>
        <form action="/delete" method="POST">
            <div class="item">
                <input type="checkbox" name="check" value="<%= task._id %>" onChange="this.form.submit()">
                <p><%= task.task %></p>
            </div>
            <input type="hidden" name="listName" value=<%= title %>></input>  
        </form>
    <% }); %>
    <form class="item" action="/" method="POST">
        <input type="text" name="task" placeholder="Add a new task" autocomplete="off" autofocus>
        <button type="submit" name="list" value="<%= title %>">+</button>
    </form>
</div>
<%- include('footer') -%>